<Window x:Class="ComingledLists.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640">
    <Grid Name="MainGrid" Height="439" Width="616">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition MaxHeight="30" />
        </Grid.RowDefinitions>
        <ListBox HorizontalAlignment="Stretch" Name="MainListBox" VerticalAlignment="Stretch" />
        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" Name="MainStackPanel" VerticalAlignment="Stretch">
            <TextBlock Height="Auto" Name="OutputTextBlock" Text="" TextWrapping="WrapWithOverflow" />
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Name="BottomStackPanel" Orientation="Horizontal">
            <Button Content="Add from 1" Height="23" HorizontalAlignment="Left" Name="AddFromOneButton" Width="75" Click="AddFromOneButton_Click" />
            <Button Content="Add from 2" Height="23" HorizontalAlignment="Left" Name="AddFromTwoButton" Width="75" Click="AddFromTwoButton_Click" />
        </StackPanel>
    </Grid>
</Window>
