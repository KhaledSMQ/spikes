@{
    ViewBag.Title = "Volume";
}
<h2>Chat</h2>
<div class="container">
    <input type="text" id="volume" value="1"/>
    <input type="button" id="startsending" value="Start sending" />
    <input type="button" id="stopsending" value="Stop sending" />
    <div id="results"></div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function() {
            // Reference the auto-generated proxy for the hub.
            var volume = $.connection.volumeHub;
            var messages = [];
            volume.client.addStartMessage = function(message) {
            };
            volume.client.addMessage = function(message) {
            };
            volume.client.addLastMessage = function(message) {
                messages.push(message);
            };
            volume.client.printStats = function() {
                messages.forEach(function(message) {
                    var o = JSON.parse(message);
                    var idx = o.index;
                    var total = o.total;
                    var time = o.time;
                    var payload = o.payload;
                    $('#results').append(idx + ', ' + total + ', ' + payload.length + ', ' + time).append('<br/>');
                });
                messages = [];
            };
            // Start the connection.
            $.connection.hub.start().done(function() {
                $('#startsending').click(function() {
                    // Call the Send method on the hub.
                    volume.server.startSending($('#volume').val());
                });
                $('#stopsending').click(function() {
                    // Call the Send method on the hub.
                    volume.server.stopSending();
                });
            });
        });

// This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}